<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="300dp"
    android:weightSum="10"
    android:background="@drawable/roundshape"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:background="#1b235f">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="S e t t i n g"
            android:textSize="10pt"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.5"
        android:background="#bdbdbe"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="4"
        android:weightSum="1"
        android:gravity="center"
        android:background="#e6e6e6"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="Controller"
                android:textSize="9pt"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/useropt_ctr_doublelever"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/lefttopviolet"
                    android:textColor="#ffffff"
                    android:textSize="7pt"
                    android:gravity="center"
                    android:text="DoubleLever"
                    />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/useropt_ctr_joystick1"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/righttopwhite"
                    android:textColor="#000000"
                    android:textSize="7pt"
                    android:gravity="center"
                    android:text="JoyStick1"
                    />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/useropt_ctr_leverwheel"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/leftbottomviolet"
                    android:textColor="#ffffff"
                    android:textSize="7pt"
                    android:gravity="center"
                    android:text="LeverNWheel"
                    />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/useropt_ctr_joystick2"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rightbottomwhite"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="7pt"
                    android:text="JoyStick2"
                    />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="4"
        android:weightSum="1"
        android:gravity="center"
        android:background="#e6e6e6"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:text="Sensitivity"
                android:textColor="#000000"
                android:textSize="9pt"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1.5"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="7pt"
                        android:gravity="center_vertical|left"
                        android:text="Angular"/>
                    <TextView
                        android:id="@+id/useropt_sst_angulartxt"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="7pt"
                        android:gravity="center_vertical|right"
                        android:text="0.8"/>
                </LinearLayout>
                <SeekBar
                    android:id="@+id/useropt_sst_angularbar"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:max="100"
                    android:thumb="@drawable/ctr_thumb"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1.5"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="7pt"
                        android:gravity="center_vertical|left"
                        android:text="Velocity"/>
                    <TextView
                        android:id="@+id/useropt_sst_veltxt"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="7pt"
                        android:gravity="center_vertical|right"
                        android:text="0.8"/>
                </LinearLayout>
                <SeekBar
                    android:id="@+id/useropt_sst_velbar"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:max="100"
                    android:thumb="@drawable/ctr_thumb"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
