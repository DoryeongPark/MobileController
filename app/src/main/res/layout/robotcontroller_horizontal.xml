<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.5"
        android:background="#bdbdbe"
        android:orientation="vertical"
        android:weightSum="4.5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="4"
            android:background="#1b325f"
            android:orientation="horizontal"
            android:weightSum="7">
            <View
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <ImageView
                android:id="@+id/connection_state"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:src="@drawable/disconnected" />

            <TextView
                android:id="@+id/controllerRobotName"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="10pt"/>
            <ImageView
                android:id="@+id/controllerUserOption"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/menu"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/velocity_display_layout"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.5"
        android:background="#7e7e7e"
        android:orientation="horizontal"
        android:padding="3dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="8"
        android:background="#e6e6e6"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/left_control_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:background="@drawable/roundshape"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/verticalLeftArrow"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:alpha="0.8"
                            android:gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/leftarrow"/>
                        <ScrollView
                            android:id="@+id/verticalScroll"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8">
                        </ScrollView>
                        <ImageView
                            android:id="@+id/verticalRightArrow"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:alpha="0.8"
                            android:gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/rightarrow"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/right_control_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
